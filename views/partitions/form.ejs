<form method="POST" id="update-user">
    <div class="new-user">
        <div class="form-group">
            <label for="name" class="label">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Name Surname">
        </div>
        <div class="form-group">
            <label for="DOB" class="label">Date of Birth</label>
            <input type="text" name="DOB" value="" placeholder="01.01.1991">
        </div>
        <div class="form-group">
            <label for="Email" class="label">Email</label>
            <input type="text" name="email" value="" placeholder="user@gmail.com">
        </div>
        <div class="form-group">
            <label for="gender" class="label">Gender</label>
            <div class="radio-checker">
                <input type="radio" name="gender" id="radio-1" value="Male">
                <label for="radio-1" class="radio-label">Male</label>
            </div>
            <div class="radio-checker">
                <input type="radio" name="gender" id="radio-2" value="Female">
                <label for="radio-2" class="radio-label">Female</label>
            </div>
        </div>
        <div class="form-group">
            <label for="gender" class="label">Status</label>
            <div class="radio-checker">
                <input type="radio" name="status" id="radio-3" value="Active">
                <label for="radio-3" class="radio-label">Active</label>
            </div>
            <div class="radio-checker">
                <input type="radio" name="status" id="radio-4" value="Inactive">
                <label for="radio-4" class="radio-label">Inactive</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-sub">Save</button>
        </div>
    </div>
    </div>
</form>