<div class="new-user">
    <div class="form-group">
        <label for="name" class="label">Name</label>
        <input type="hidden" name="id" value="<%= typeof user == "undefined" ? '' : user._id %>">
        <input type="text" name="name" value="<%= typeof user == "undefined" ? '' : user.name %>" placeholder="Name Surname">
    </div>
    <div class="form-group">
        <label for="DOB" class="label">Date of Birth</label>
        <input type="text" name="DOB" value="<%= typeof user == "undefined" ? '' : user.DOB %>" placeholder="01.01.1991">
    </div>
    <div class="form-group">
        <label for="Email" class="label">Email</label>
        <input type="text" name="email" value="<%= typeof user == "undefined" ? '' : user.email%>" placeholder="user@gmail.com">
    </div>
    <div class="form-group">
        <label for="gender" class="label">Gender</label>
        <div class="radio-checker">
            <input type="radio" name="gender" id="radio-1" value="Male" <%= typeof user == "undefined" ? '' : (user.gender == "Male") ? "checked" : '' %>>
            <label for="radio-1" class="radio-label">Male</label>
        </div>
        <div class="radio-checker">
            <input type="radio" name="gender" id="radio-2" value="Female" <%= typeof user == "undefined" ? '' : (user.gender == "Female") ? "checked" : '' %>>
            <label for="radio-2" class="radio-label">Female</label>
        </div>
    </div>
    <div class="form-group">
        <label for="gender" class="label">Status</label>
        <div class="radio-checker">
            <input type="radio" name="status" id="radio-3" value="Active" <%= typeof user == "undefined" ? '' : (user.status == "Active") ? "checked" : '' %>>
            <label for="radio-3" class="radio-label">Active</label>
        </div>
        <div class="radio-checker">
            <input type="radio" name="status" id="radio-4" value="Inactive" <%= typeof user == "undefined" ? '' : (user.status == "Inactive") ? "checked" : '' %>>
            <label for="radio-4" class="radio-label">Inactive</label>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-sub">Save</button>
    </div>
</div>
</div>